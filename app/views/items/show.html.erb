<% provide(:title, @item.name) %>

<div class="page-container">

        <h3>Product code:</h3>
        <p><%= @item.id %></p>

      	<h3>Item name:</h3>
        <p><%= @item.name %></p>

        <h3>Cupboard where it's stored:</h3>
        <%= link_to @item.cupboard.name, cupboard_url(@item.cupboard) %>

        <h3>Item quantity:</h3>
        <%= @item.item_quantity %>

        <h3>Can this item be borrowed?</h3>

        <% if @item.borrowable? %>
        <p>Yes</p>
        <% else %>
        <p>No</p>
        <% end %>

        <br>


        <% if @item.item_quantity == 0 %>

        <% else %>

          <% if @item.borrowable? %>
            <%= link_to "Borrow item", order_stationary_url(@item), class: 'btn btn-login' %>
          <% else %>
            <%= link_to "Use item", order_stationary_url(@item), class: 'btn btn-login'%>
          <% end %>
  
        <% end %>

</div>