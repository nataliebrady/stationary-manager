    | <%= link_to "edit", edit_item_path(item) %> | <%= link_to "delete", item, method: :delete,
                                  data: { confirm: "You sure?" } %>
  <% end %>


<% if item.item_quantity == 0 %>

<% else %>

  <% if item.borrowable?  %>

    <% if(@all_user_items.where('created_at < ? and returned = ?', DateTime.now-2.days, false).present?) %>

      <% else %>

        <%= link_to "Borrow item", order_stationary_url(item) %>

      <% end %>

  <% else %>
  <%= link_to "Use item", order_stationary_url(item) %>
  <% end %>
  
<% end %>
  

</li>
